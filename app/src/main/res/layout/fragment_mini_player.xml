<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="72dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_bottom_player"
    android:background="@color/darkBlue"
    android:padding="5dp"
    tools:context=".fragments.MiniPlayerFragment">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_centerVertical="true"
        android:id="@+id/audio_image_miniPlayer"
        android:scaleType="centerCrop"/>

    <Button
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/ic_play"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        app:backgroundTint="@color/white"
        android:id="@+id/play_pause_miniPlayer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_name_miniPlayer"
        android:textColor="#ffffff"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/audio_image_miniPlayer"
        android:textSize="18sp"
        android:maxLines="1"
        android:layout_toStartOf="@+id/play_pause_miniPlayer"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/audio_desc_miniPlayer"
        android:textColor="#ffffff"
        android:scrollHorizontally="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="15dp"
        android:layout_toEndOf="@+id/audio_image_miniPlayer"
        android:layout_below="@+id/audio_name_miniPlayer"
        android:textSize="15sp"
        android:layout_toStartOf="@+id/play_pause_miniPlayer"
       />
</RelativeLayout>